<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thermatk.android.xf.telegram.SettingsActivity">


    <TextView
        android:text="There is only one setting here for you:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
        android:id="@+id/RadioRealButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textView"
        app:rrbg_animateImagesScale="0.2"
        app:rrbg_animateImages_enter="overshoot"
        app:rrbg_animateImages_enterDuration="500"
        app:rrbg_animateImages_exit="overshoot"
        app:rrbg_animateImages_exitDuration="500"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_animateTexts_enterDuration="500"
        app:rrbg_backgroundColor="#FFF"
        app:rrbg_bottomLineBringToFront="true"
        app:rrbg_bottomLineColor="@color/blue_300"
        app:rrbg_bottomLineRadius="2dp"
        app:rrbg_bottomLineSize="0dp"
        app:rrbg_buttonsPaddingBottom="12dp"
        app:rrbg_buttonsPaddingTop="12dp"
        app:rrbg_dividerColor="@color/black"
        app:rrbg_dividerPadding="10dp"
        app:rrbg_dividerRadius="2dp"
        app:rrbg_dividerSize="1dp"
        app:rrbg_radius="20dp"
        app:rrbg_selectorAboveOfBottomLine="false"
        app:rrbg_selectorBringToFront="true"
        app:rrbg_selectorColor="@color/grey_800"
        app:rrbg_selectorRadius="0dp"
        app:rrbg_selectorSize="6dp"
        app:rrbg_selectorTop="true"
        app:rrbg_shadow="true"
        app:rrbg_shadowElevation="2dp"
        app:rrbg_shadowMargin="3dp">

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/buttonApple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/apple"
            app:rrb_imageHeight="36dp"
            app:rrb_imageTop="true"
            app:rrb_imageWidth="36dp"
            app:rrb_marginBetweenImageAndText="2dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/brown_500"
            app:rrb_text="Apple"/>

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/buttonGoogleNoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/google"
            app:rrb_imageHeight="36dp"
            app:rrb_imageTop="true"
            app:rrb_imageWidth="36dp"
            app:rrb_marginBetweenImageAndText="2dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/brown_500"
            app:rrb_text="Noto"/>

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/buttonEmoji1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/emone"
            app:rrb_imageHeight="36dp"
            app:rrb_imageTop="true"
            app:rrb_imageWidth="36dp"
            app:rrb_marginBetweenImageAndText="2dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/brown_500"
            app:rrb_text="E-One"/>

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/buttonTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/twemoji"
            app:rrb_imageHeight="36dp"
            app:rrb_imageTop="true"
            app:rrb_imageWidth="36dp"
            app:rrb_marginBetweenImageAndText="2dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/brown_500"
            app:rrb_text="Twemoji"/>
    </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>

    <TextView
        android:text="and don't forget to reboot afterwards!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioRealButtonGroup"
        android:id="@+id/textView2" />
</RelativeLayout>
